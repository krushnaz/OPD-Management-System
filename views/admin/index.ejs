												<th>Phone</th>
												<th>Address</th>
											</tr>
										</thead>
										<tbody>
											<%patients.forEach(patient=>{%>
												<tr>
													<td>
														<h2 class="table-avatar">
															<a href="#" class="avatar avatar-sm mr-2"><img
																	class="avatar-img rounded-circle"
																	src="<%=patient.image%>"
																	alt="Patient Image"></a>
															<a href="#"><%=patient.firstName%> <%=patient.lastName%></a>
														</h2>
													</td>
													<td><%=patient.mobile%></td>
													<td><%=patient.address%></td>
												</tr>
											<%})%>
										</tbody>
									</table>
								</div>
							</div>
						</div>
						<!-- /Feed Activity -->

					</div>
				</div>
